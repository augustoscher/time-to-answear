
<% @questions.each do |q| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= "#{q.id} - #{q.description}"%></h3>
    </div>
    <div class="panel-body">
      <ul>
        <% i = 0%>
        <% q.answers.each do |a| %>
          <% i += 1%>
          <li><%= "#{i} - #{a.description}" %></li>
        <% end %>
      <ul>
    </div>
  </div>
<% end %>
<div class="text-center">
  <%= paginate @questions%>
</div>