<% @questions.each do |q| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="label label-info" style="margin-right: 5px">
            <%= link_to q.subject.description, site_search_subject_path(q.subject_id, q.subject.description), style:"color: white;" %>
          </span>
          <%= "#{q.id} - #{q.description}"%>
        </h3>
      </div>
      <div class="panel-body">
        <ul>
          <% i = 0%>
          <% q.answers.each do |a| %>
            <li style="list-style:none;">
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', a.id %>
                  <% i += 1 %>
                  <%= "#{i} - #{a.description}" %>
                </label>
              </div>
            </li>
          <% end %>
          <li style="list-style:none;">
            <%= form.submit "Check", class:"btn btn-default", id: "submit_#{q.id}" %>
          </li>
        <ul>
      </div>
    </div>
  <% end %>
<% end %>
<div class="text-center">
  <%= paginate @questions%>
</div>