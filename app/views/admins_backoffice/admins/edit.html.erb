<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800">Edit Admin</h1>

  <% if @admin.errors.any? %>
    <div class="card mb-3 py-1 border-bottom-danger ">
      <div class="card-body">
        <ul>
          <% @admin.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class=row>
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
      <div class="form-group row">
      </div>
      <div class="form-group">
        <%= form.text_field :email, class:"form-control", placeholder:"Email Address" %>
      </div>
      <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
          <%= form.password_field :password, class:"form-control form-control-user", placeholder:"Password" %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password_confirmation, class:"form-control form-control-user", placeholder:"Repeat Password" %>
        </div>
      </div>
      <hr>
      <button type="submit" class="btn btn-primary btn-user btn-block">Save</button>
    <% end %>
  </div>
</div>