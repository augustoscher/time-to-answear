<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Questions</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Description</th>
        <th>Subject</th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description %></td>
          <td style="width:150px">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_question_path(question), method: :delete, 
              class:"btn btn-danger btn-circle", data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @questions%>
</div>